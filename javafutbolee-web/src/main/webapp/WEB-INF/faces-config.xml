<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- Enable Spring -->
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>
    
    <navigation-rule>
        <from-view-id>
            /views/index.xhtml
        </from-view-id>        
        <navigation-case>
            <from-outcome>loginx</from-outcome>
            <to-view-id>/views/p/login.xhtml</to-view-id> 
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>loginx2</from-outcome>
            <to-view-id>/views/s/xxx.xhtml</to-view-id>
            <redirect></redirect> 
        </navigation-case> 
        
        <navigation-case>
            <from-outcome>loginx3</from-outcome>
            <to-view-id>/views/xxx.xhtml</to-view-id>
            <redirect></redirect> 
        </navigation-case> 
        
    </navigation-rule>
    
</faces-config>
